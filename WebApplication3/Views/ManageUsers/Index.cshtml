@model IEnumerable<WebApplication3.Areas.Identity.Data.CustomizeUser>
@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<div class="container">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>No.</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Handle</th>
            </tr>
        </thead>
        <tbody>
            @{int i = 0;}
            @foreach (var user in Model)
            {
                i++;
                <tr>
                    <td style="display: none">@user.Id</td>
                    <td>@i</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>
                        @foreach (var role in user.UserRoles)
                        {
                            @role.Role
                        }
                    </td>
                    <td></td>
                </tr>
            }
        </tbody>
    </table>
</div>